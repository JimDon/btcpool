version: '3'
services:

  zookeeper:
    image: wurstmeister/zookeeper

  kafka:
    depends_on:
      - zookeeper
    image: wurstmeister/kafka
    environment:
      KAFKA_ADVERTISED_HOST_NAME: mydoors-E5Dev
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181

  mysql:
    build:
      context: ../mysql
    environment:
      MYSQL_ROOT_PASSWORD: root

  litecoind:
    image: litecoind:0.16.3
    volumes:
      - /work/litecoind:/root/.litecoin

  userlist:
    build:
      context: ../userlist-api
      args:
        APT_MIRROR_URL: $APT_MIRROR_URL

  gbtmaker:
    depends_on:
      - kafka
      - litecoind
    image: btccom/btcpool-ltc
    volumes:
      - ./cfg:/work/config
    command: /wait-for-it.sh kafka:9092 -- /wait-for-it.sh litecoind:19332 -- gbtmaker -c /work/config/gbtmaker.cfg

  jobmaker:
    depends_on:
      - kafka
    image: btccom/btcpool-ltc
    volumes:
      - ./cfg:/work/config
    command: /wait-for-it.sh kafka:9092 -- jobmaker -c /work/config/jobmaker.cfg

  sserver:
    depends_on:
      - kafka
      - userlist
    image: btccom/btcpool-ltc
    ports:
      - 53333:3333
    volumes:
      - ./cfg:/work/config
    command: /wait-for-it.sh kafka:9092 -- /wait-for-it.sh userlist:80 -- sserver -c /work/config/sserver.cfg

  sserver-simulator:
    depends_on:
      - kafka
      - userlist
    image: btccom/btcpool-ltc
    ports:
      - 53334:3334
    volumes:
      - ./cfg:/work/config
    command: /wait-for-it.sh kafka:9092 -- /wait-for-it.sh userlist:80 -- sserver -c /work/config/sserver-simulator.cfg

  blkmaker:
    depends_on:
      - kafka
      - litecoind
    image: btccom/btcpool-ltc
    volumes:
      - ./cfg:/work/config
    command: /wait-for-it.sh kafka:9092 -- /wait-for-it.sh litecoind:19332 -- blkmaker -c /work/config/blkmaker.cfg

  statshttpd:
    depends_on:
      - kafka
      - mysql
    image: btccom/btcpool-ltc
    volumes:
      - ./cfg:/work/config
    command: /wait-for-it.sh kafka:9092 -- /wait-for-it.sh mysql:3306 -- statshttpd -c /work/config/statshttpd.cfg

  sharelogger:
    depends_on:
      - kafka
    image: btccom/btcpool-ltc
    volumes:
      - ./cfg:/work/config
      - sharelog:/work/sharelog
    command: /wait-for-it.sh kafka:9092 -- sharelogger -c /work/config/sharelogger.cfg

  slparser:
    depends_on:
      - mysql
    image: btccom/btcpool-ltc
    volumes:
      - ./cfg:/work/config
      - sharelog:/work/sharelog
    command: /wait-for-it.sh mysql:3306 -- slparser -c /work/config/slparser.cfg

volumes:
  sharelog: {}
